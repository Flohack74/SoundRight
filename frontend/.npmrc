# NPM configuration for SoundRight Frontend
# Handle peer dependency conflicts with react-scripts
legacy-peer-deps=true
force=true

# Use npm registry
registry=https://registry.npmjs.org/

# Enable package-lock
package-lock=true

# Disable fund messages
fund=false

# Set audit level
audit-level=moderate

# Handle dependency resolution issues
prefer-offline=false

# Memory optimization
maxsockets=1
